<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F1F6FA"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#6C60FF"
        app:cardElevation="10dp">

        <RelativeLayout android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/flag"
                android:layout_alignParentLeft="true"
                tools:src="@drawable/japan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:padding="5dp"
                android:layout_alignParentStart="true" />
            <TextView
                style="@style/Title"
                tools:text="Japan - Tokyo"
                android:layout_toRightOf="@+id/flag"
                android:layout_marginStart="20dp"
                android:id="@+id/countryName"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/flag" />
            <ImageView
                android:id="@+id/btn_selected"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_signal"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />



            <pl.droidsonroids.gif.GifImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/upgrade" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
